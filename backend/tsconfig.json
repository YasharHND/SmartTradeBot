{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Output */
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "sourceMap": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
