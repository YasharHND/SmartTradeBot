{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@clients/*": ["./clients/*"],
      "@entities/*": ["./entities/*"],
      "@errors/*": ["./errors/*"],
      "@handlers/*": ["./handlers/*"],
      "@lambdas/*": ["./lambdas/*"],
      "@models/*": ["./models/*"],
      "@prompts/*": ["./prompts/*"],
      "@repositories/*": ["./repositories/*"],
      "@schemas/*": ["./schemas/*"],
      "@utils/*": ["./utils/*"],
      "@common/*": ["../../common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
